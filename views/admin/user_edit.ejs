<%- include("../partials/_header") %>

<div class="container">
  <div class="py-5">
    <div class="row justify-content-center">
      <div class="col-4">
        <div class="d-flex justify-content-between mb-3">
          <h1 class="fs-2">Edit <%= user.name %></h1>
        </div>
        <form
          id="edituserform"
          method="POST"
          action="/admin/users/<%= user._id %>?_method=PUT"
          novalidate
        >
          <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              value="<%= user.name %>"
              required
            />
            <div class="invalid-feedback">Please enter your name.</div>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              value="<%= user.email %>"
              required
            />
            <div class="invalid-feedback">
              Please enter a valid email address.
            </div>
          </div>
          <div class="mb-3">
            <label for="mobile" class="form-label">Mobile Number:</label>
            <input
              type="tel"
              class="form-control"
              id="mobile"
              name="mobile"
              pattern="[0-9]{10}"
              value="<%= user.mobile %>"
              required
            />
            <div class="invalid-feedback">
              Please enter a valid mobile number.
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label d-block">Verification:</label>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="radio"
                name="isVerified"
                id="inlineRadio1"
                <%= user.isVerified === 0 ? "checked" : "" %>
                value="0"
              />
              <label class="form-check-label" for="inlineRadio1">Not Verify</label>
            </div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="radio"
                name="isVerified"
                id="inlineRadio2"
                <%= user.isVerified === 1 ? "checked" : "" %>
                value="1"
              />
              <label class="form-check-label" for="inlineRadio2">Verify</label>
            </div>
          </div>
          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="/admin/dashboard" class="btn btn-outline-secondary"
              >Back to Dashboard</a
            >
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script>
  document.getElementById("edituserform").addEventListener(
    "submit",
    function (event) {
      event.preventDefault();
      event.stopPropagation();

      if (this.checkValidity() === false) {
        this.classList.add("was-validated");
      } else {
        if (!customValidate()) {
          return;
        }
        this.submit();
      }
    },
    false
  );

  function customValidate() {
    const mobile = document.getElementById("mobile").value;

    const mobileRegex = /^(?!0{5})[1-9][0-9]{9}$/;
    if (!mobileRegex.test(mobile)) {
      const mobileField = document.getElementById("mobile");
      mobileField.classList.add("is-invalid");
      mobileField.nextElementSibling.style.display = "block";
      return false;
    }

    return true;
  }
</script>

<%- include("../partials/_footer") %>
